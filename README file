#include <stdio.h>
#include <stdlib.h>

int main(){
    int opcao;
    double A, B, resut;
    char dnv;

    do {
        printf("===============================\n");
        printf("   Simple Calculator\n");
        printf("===============================\n");
        printf("Select an operation:\n");
        printf("1. Addition\n");
        printf("2. Subtraction\n");
        printf("3. Multiplication\n");
        printf("4. Division\n");
        printf("5. Exit\n");
        printf("Option: ");
        
        } while (scanf("%d", &opcao) != 1 || opcao < 1 || opcao > 5);
            printf("This is an invalid option. Please enter a number between 1 and 5.\n");
            printf("Option: ");
            while (getchar() != '\n'){
            if (opcao == 5) {
                printf("\nThank you for using the calculator! See you next time."); //aqui
                    break;
            }
        }
        
        printf("Enter the first number: ");
        while (scanf("%lf", &A) != 1) {
            printf("Invalid number. Try again: ");
            while (getchar() != '\n');
        }

        printf("Enter the second number: ");
        while (scanf("%lf", &B) != 1) {
            printf("Invalid number. Try again: ");
            while (getchar() != '\n');
        }
        
        switch (opcao) {
            case 1:
                resut = A + B;
                printf("Result: %.2lf + %.2lf = %.2lf\n", A, B, resut);
                break;

            case 2:
                resut = A - B;
                printf("Result: %.2lf - %.2lf = %.2lf\n", A, B, resut);
                break;

            case 3:
                resut = A * B;
                printf("Result: %.2lf * %.2lf = %.2lf\n", A, B, resut);
                break;

            case 4:
                if (B == 0){
                    printf("Error: Division by zero is not allowed.\n");
                } else {
                    resut = A / B;
                    printf("Result: %.2lf / %.2lf = %.2lf\n", A, B, resut);
                }
                break;
        }
        
        printf("\nDo you want to perform another operation? (y/n): ");
        while (1){
            scanf(" %c", &dnv);
            if (dnv == 'y' || dnv == 'Y' || dnv == 'n' || dnv == 'N'){
                break;
            } 
            else{
                printf("Invalid response. Please type 'y' for yes or 'n' for no.");
            }
        }

    return 0;
}
